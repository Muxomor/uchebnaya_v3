<Page x:Class="uchebnaya.Pages.GuestPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:uchebnaya.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="GuestPage">

    <Grid>
        <ListView Name="DisciplinaLV">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Название дисциплины" DisplayMemberBinding="{Binding disciplina_name}"></GridViewColumn>
                    <GridViewColumn Header="Объем дисциплины" DisplayMemberBinding="{Binding disciplina_volume}"></GridViewColumn>
                    <GridViewColumn Header="Шифр кафедры" DisplayMemberBinding="{Binding kafedra_shifr}"></GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Page>
