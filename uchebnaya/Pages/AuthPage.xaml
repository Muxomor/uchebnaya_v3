<Page x:Class="uchebnaya.Pages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:uchebnaya.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" Orientation="Vertical" VerticalAlignment="Center">
            <TextBlock Margin="10 10">Оставьте поле пустым чтобы войти как гость</TextBlock>
            <StackPanel Orientation="Vertical">
                <TextBlock HorizontalAlignment="Center">Введите Ваш таб.номер</TextBlock>
                <TextBox Margin="0 10" Name="loginTB" Width="100" KeyDown="loginTB_KeyDown"></TextBox>
            </StackPanel>
            <Button Name="AuthBtn" Margin="0 10" Width="80" Click="AuthBtn_Click">Войти</Button>
        </StackPanel>
    </Grid>
</Page>
